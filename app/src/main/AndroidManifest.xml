<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.courseratingsystem.app">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.MOUNT_UNMOUNT_FILESYSTEMS" />

    <application
        android:name=".application.MyCourseApplication"
        android:allowBackup="true"
        android:icon="@mipmap/app_icon"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".activity.SplashActivity"
            android:theme="@style/SplashTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activity.LoginActivity"
            android:theme="@style/LoginTheme" />
        <activity
            android:name=".activity.CourseActivity"
            android:theme="@style/CourseTheme" />
        <activity
            android:name=".activity.TeacherActivity"
            android:theme="@style/Theme.AppCompat.NoActionBar" />
        <activity
            android:name=".activity.PersonalPopupActivity"
            android:theme="@style/PopupActivityStyle" />
        <activity android:name=".activity.CommentActivity" />
        <activity
            android:name=".activity.CommentPopupActivity"
            android:theme="@style/PopupActivityStyle" />
        <activity android:name=".activity.AddCommentActivity" />
        <activity android:name=".activity.ChangePasswordActivity" />
        <activity android:name=".activity.ChangeProfileActivity" />
        <activity android:name=".activity.MyFavoritesActivity" />
        <activity android:name=".activity.MyCommentsActivity" />
        <activity
            android:name=".activity.IndexActivity"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar" />
        <activity
            android:name=".activity.ViewPagerActivity"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar">
        </activity>
        <activity android:name=".activity.AboutUsActivity" >
        </activity>

    </application>
</manifest>