<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.courseratingsystem.app.activity.AddCommentActivity">
    <!--<LinearLayout-->
    <!--android:background="@android:color/transparent"-->
    <!--android:layout_width="wrap_content"-->
    <!--android:layout_height="wrap_content"-->
    <!--android:layout_alignParentTop="true"-->
    <!--android:layout_alignParentStart="true">-->

    <android.support.v7.widget.CardView

        android:layout_width="200dp"
        android:layout_height="300dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="10dp"
        android:background="@color/pureWhite"
        app:cardCornerRadius="10dp"
        app:cardElevation="8dp">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/item_addcomment_text_attributename"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="内容好否？"
                android:textSize="10sp" />

            <TextView
                android:id="@+id/item_addcomment_text_attributedescrip"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="从老师讲授知识层面来讲，内容对自己有益程度；内容有益，请给多星。"
                android:textSize="8sp" />

            <RatingBar
                android:id="@+id/item_addcomment_rating_attributerating"
                style="@style/CourseRatingStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp" />


        </LinearLayout>

    </android.support.v7.widget.CardView>

    <!--</LinearLayout>-->

</RelativeLayout>