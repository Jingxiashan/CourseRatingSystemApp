<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.courseratingsystem.app.activity.AddCommentActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <!--课程基本信息标题-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/activity_comment_image_courseImag"
                android:layout_width="80sp"
                android:layout_height="80sp"
                android:layout_marginBottom="20dp"
                android:layout_marginTop="20dp"
                android:src="@mipmap/app_icon" />

            <LinearLayout

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="@dimen/activity_addcomment_side_margin"
                android:layout_marginTop="20dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/activity_comment_text_courseName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Course_Name"
                    android:textSize="@dimen/activity_addcomment_header_font_size" />

                <TextView
                    android:id="@+id/activity_comment_text_TeacherName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Course_Teacher_Name"
                    android:textSize="@dimen/activity_addcomment_subheader_font_size" />

            </LinearLayout>

        </LinearLayout>

        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/activity_login_input_margin"
            android:layout_marginTop="@dimen/activity_addcomment_subtop_margin"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <View
                android:layout_width="0dp"
                android:layout_height="0.5dp"
                android:layout_marginBottom="@dimen/activity_login_input_margin_half"
                android:layout_marginEnd="20dp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="@dimen/activity_login_input_margin_half"
                android:layout_weight="3"
                android:background="@color/lightGreyAlpha" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="8"
                android:gravity="center_horizontal"
                android:text="嗯，老司机们这样说"
                android:textColor="@color/lightGrey"
                android:textSize="@dimen/activity_login_font_size" />

            <View
                android:layout_width="0dp"
                android:layout_height="0.5dp"
                android:layout_marginBottom="@dimen/activity_login_input_margin_half"
                android:layout_marginEnd="20dp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="@dimen/activity_login_input_margin_half"
                android:layout_weight="3"
                android:background="@color/lightGreyAlpha" />
        </LinearLayout>

        <ListView
            android:id="@+id/activity_comment_listview_allcomments"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:divider="@null"
            android:dividerHeight="@dimen/activity_comment_content_subside_margin">

        </ListView>

    </LinearLayout>
</RelativeLayout>
