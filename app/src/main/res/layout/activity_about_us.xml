<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.courseratingsystem.app.activity.AboutUsActivity">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/activity_about_us_image"
        android:src="@drawable/splash_logo"/>

    <RelativeLayout
        android:layout_marginTop="30dp"
        android:layout_marginLeft="20dp"
        android:layout_below="@+id/activity_about_us_image"
        android:id="@+id/huangjiaxing"
        android:layout_width="150dp"
        android:layout_height="150dp">
        <android.support.v4.view.ViewPager
            android:id="@+id/activity_about_us_huangjiaxing"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true">
        </android.support.v4.view.ViewPager>
    </RelativeLayout>

    <RelativeLayout
        android:layout_marginTop="30dp"
        android:layout_marginRight="20dp"
        android:layout_below="@+id/activity_about_us_image"
        android:layout_alignParentRight="true"
        android:id="@+id/zhangyanze"
        android:layout_width="150dp"
        android:layout_height="150dp">
        <android.support.v4.view.ViewPager
            android:id="@+id/activity_about_us_zhangyanze"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true">
        </android.support.v4.view.ViewPager>
    </RelativeLayout>

    <RelativeLayout
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
        android:layout_below="@+id/huangjiaxing"
        android:id="@+id/ludi"
        android:layout_width="150dp"
        android:layout_height="150dp">
        <android.support.v4.view.ViewPager
            android:id="@+id/activity_about_us_ludi"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        </android.support.v4.view.ViewPager>
    </RelativeLayout>

    <RelativeLayout
        android:layout_marginTop="20dp"
        android:layout_marginRight="20dp"
        android:layout_below="@+id/zhangyanze"
        android:layout_alignParentRight="true"
        android:layout_width="150dp"
        android:layout_height="150dp">
        <android.support.v4.view.ViewPager
            android:id="@+id/activity_about_us_kongxiao"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true">
        </android.support.v4.view.ViewPager>
    </RelativeLayout>

</RelativeLayout>
