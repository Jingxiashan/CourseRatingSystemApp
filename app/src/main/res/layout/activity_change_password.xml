<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:focusable="true"
    android:focusableInTouchMode="true"
    tools:context="com.courseratingsystem.app.activity.ChangePasswordActivity">

    <LinearLayout
        android:id="@+id/activity_change_password_personal_image_layout"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_alignParentStart="true"
        android:layout_marginTop="40dp"
        android:gravity="center_horizontal">
        <ImageView
            android:id="@+id/activity_change_password_personal_image"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_marginTop="20dp"
            android:src="@drawable/default_personal_image"/>
    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/activity_change_password_personal_image_layout">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:gravity="center"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="280dp"
                android:layout_height="65dp"
                android:layout_marginTop="20dp"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginTop="15dp"
                    android:src="@drawable/changepassword_lock" />

                <android.support.design.widget.TextInputLayout
                    android:id="@+id/activity_change_password_oldPassword_textInputLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    app:errorTextAppearance="@style/Activity_Change_Password_TextInputLayout_ErrorText"
                    app:hintTextAppearance="@style/Activity_Change_Password_TextInputLayout">
                    <EditText
                        android:id="@+id/activity_change_password_oldPassword"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/line_et_bg"
                        android:hint="请输入旧密码"
                        android:inputType="textPassword"
                        android:paddingBottom="3dp" />
                </android.support.design.widget.TextInputLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="280dp"
                android:layout_height="65dp"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginTop="15dp"
                    android:src="@drawable/changepassword_lock" />

                <android.support.design.widget.TextInputLayout
                    android:id="@+id/activity_change_password_newPassword_textInputLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    app:errorTextAppearance="@style/Activity_Change_Password_TextInputLayout_ErrorText"
                    app:hintTextAppearance="@style/Activity_Change_Password_TextInputLayout">
                    <EditText
                        android:id="@+id/activity_change_password_newPassword"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/line_et_bg"
                        android:hint="请输入新密码"
                        android:inputType="textPassword"
                        android:paddingBottom="3dp" />
                </android.support.design.widget.TextInputLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="280dp"
                android:layout_height="65dp"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginTop="15dp"
                    android:src="@drawable/changepassword_lock" />

                <android.support.design.widget.TextInputLayout
                    android:id="@+id/activity_change_password_secondInputnewPassword_textInputLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    app:errorTextAppearance="@style/Activity_Change_Password_TextInputLayout_ErrorText"
                    app:hintTextAppearance="@style/Activity_Change_Password_TextInputLayout">

                    <EditText
                        android:id="@+id/activity_change_password_secondInputNewPassword"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/line_et_bg"
                        android:hint="请再次输入新密码"
                        android:inputType="textPassword"
                        android:paddingBottom="3dp" />
                </android.support.design.widget.TextInputLayout>

            </LinearLayout>

            <Button
                android:id="@+id/activity_change_password_submit"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/activity_changepassword_submitbutton_bg"
                android:text="修改"
                android:textColor="@color/Grey"
                android:textSize="16sp" />

        </LinearLayout>
    </ScrollView>

</RelativeLayout>
