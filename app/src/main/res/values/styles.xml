<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="SplashTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowBackground">@color/splashBackColor</item>
    </style>

    <style name="LoginTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowBackground">@color/splashBackColor</item>
        <item name="android:textColor">@color/pureWhite</item>
        <item name="colorPrimary">@color/pureWhite</item>
        <item name="colorPrimaryDark">@color/lightGrey</item>
        <item name="android:windowTranslucentStatus">true</item>
    </style>
    <style name="CourseTheme" parent="Theme.AppCompat.NoActionBar">

    </style>

    <!--Ratingbar style-->
    <style name="CourseRatingStyle" parent="@android:style/Widget.RatingBar">
        <item name="android:progressDrawable">@drawable/addcomment_courseratingstyle</item>
        <item name="android:minHeight">35dp</item>
        <item name="android:minWidth">35dp</item>
    </style>

    <style name="CourseCommentRatingStyle" parent="@android:style/Widget.RatingBar">
        <item name="android:progressDrawable">@drawable/comment_item_courseratingstyle</item>
        <item name="android:minHeight">25dp</item>
        <item name="android:minWidth">25dp</item>
    </style>
    <style name="menu_labels_style">
        <item name="android:background">@drawable/fab_label_background</item>
        <item name="android:textColor">@color/pureWhite</item>
    </style>

    <style name="Activity_Change_Password_TextInputLayout" parent="@android:style/TextAppearance">
        <item name="android:textColor">@android:color/holo_blue_dark</item>
        <item name="android:textSize">10sp</item>
    </style>

    <style name="Activity_Change_Password_TextInputLayout_ErrorText" parent="@android:style/TextAppearance">
        <item name="android:textColor">@android:color/holo_green_dark</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="PopupActivityStyle" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowIsFloating">true</item>
    </style>

    <style name="acticity_comment_teacher_text_style">
        <item name="android:background">@drawable/activity_comment_teacher_button_bg</item>
        <item name="android:textSize">@dimen/activity_comment_teacher_font_size</item>
        <item name="android:layout_marginStart">@dimen/activity_comment_teacher_side_margin</item>
        <item name="android:layout_width">@dimen/activity_comment_teacehr_text_width</item>
        <item name="android:layout_height">@dimen/activity_comment_teacehr_text_height</item>
    </style>

</resources>
