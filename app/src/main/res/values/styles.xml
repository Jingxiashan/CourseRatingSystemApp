<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="SplashTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowBackground">@color/splashBackColor</item>
    </style>

    <style name="LoginTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowBackground">@color/splashBackColor</item>
        <item name="android:textColor">@color/pureWhite</item>
        <item name="colorPrimary">@color/pureWhite</item>
        <item name="colorPrimaryDark">@color/lightGrey</item>
        <item name="android:windowTranslucentStatus">true</item>
    </style>

</resources>
