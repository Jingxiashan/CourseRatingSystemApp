<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="SplashTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowBackground">@color/splashBackColor</item>
    </style>

    <style name="LoginTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowBackground">@color/splashBackColor</item>
        <item name="android:textColor">@color/pureWhite</item>
        <item name="colorPrimary">@color/pureWhite</item>
        <item name="colorPrimaryDark">@color/lightGrey</item>
        <item name="android:windowTranslucentStatus">true</item>
    </style>
    <style name="CourseTheme" parent="Theme.AppCompat.NoActionBar">

    </style>

    <!--Ratingbar style-->
    <style name="CourseRatingStyle" parent="@android:style/Widget.RatingBar">
        <item name="android:progressDrawable">@drawable/addcomment_courseratingstyle</item>
        <item name="android:minHeight">35dp</item>
        <item name="android:minWidth">35dp</item>
    </style>

    <style name="CourseCommentRatingStyle" parent="@android:style/Widget.RatingBar">
        <item name="android:progressDrawable">@drawable/comment_item_courseratingstyle</item>
        <item name="android:minHeight">25dp</item>
        <item name="android:minWidth">25dp</item>
    </style>
    <style name="menu_labels_style">
        <item name="android:background">@drawable/fab_label_background</item>
        <item name="android:textColor">@color/pureWhite</item>
    </style>
</resources>
